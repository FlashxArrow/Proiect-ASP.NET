@model List<WebApplication1.Models.DBObjects.Order>

<h2>Comenzile mele</h2>

@if (!Model.Any())
{
        <p>Nu ai nicio comandă plasată.</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>Produs</th>
                    <th>Data</th>
                    <th>Stare</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
                        <tr>
                            <td>@order.IdComicNavigation?.ComicName</td>
                            <td>@order.OrderDate?.ToString("d")</td>
                            <td>@order.OrderStatus</td>
                        </tr>
            }
            </tbody>
        </table>
}
