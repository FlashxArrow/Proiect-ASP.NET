<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Magazin Comics</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Font Awesome pentru iconițe -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Fișierul CSS personalizat -->
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">📚 Comics Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/products"><i class="fas fa-book"></i> Produse</a></li>
                    <li class="nav-item"><a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i> Coș</a></li>
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Dacă utilizatorul este autentificat -->
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-warning" href="/admin/orders"><i class="fas fa-crown"></i> Admin</a></li>
                        }
                        @if (User.IsInRole("seller"))
                        {
                            <li class="nav-item"><a class="nav-link text-info" href="/seller/index"><i class="fas fa-store"></i> Panou Seller</a></li>
                        }

                        <li class="nav-item"><a class="nav-link text-danger" href="/account/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                    }
                    else
                    {
                        <!-- Dacă utilizatorul NU este autentificat -->
                        <li class="nav-item"><a class="nav-link" href="/account/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/account/register"><i class="fas fa-user-plus"></i> Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-light text-center py-3 mt-4">
        <p>&copy; @DateTime.Now.Year Comics Store - Toate drepturile rezervate.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
