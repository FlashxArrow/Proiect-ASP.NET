@model List<WebApplication1.Models.DBObjects.Comic>

<h2>Panou Seller</h2>

<!-- Button to add a new product -->
<a href="/Seller/AddProduct" class="btn btn-success mb-3">
    <i class="fas fa-plus"></i> Adaugă un produs
</a>

@if (!Model.Any())
{
    <p>Nu ai adăugat niciun produs încă.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Produs</th>
                <th>Preț</th>
                <th>Stoc</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ComicName</td>
                    <td>@product.Price €</td>
                    <td>@product.Stock</td>
                    <td>
                        <a href="/Seller/Details/@product.IdComic" class="btn btn-success">
                            <i class="fas fa-eye"></i> Detalii
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
