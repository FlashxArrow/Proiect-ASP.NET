@model WebApplication1.Models.DBObjects.Comic

<h2>Modifică produs: @Model.ComicName</h2>

<form method="post">
    <input type="hidden" asp-for="IdComic" />

    <div class="form-group">
        <label for="ComicName">Nume produs</label>
        <input type="text" class="form-control" asp-for="ComicName" required />
    </div>

    <div class="form-group">
        <label for="Price">Preț</label>
        <input type="number" step="0.01" class="form-control" asp-for="Price" required />
    </div>

    <div class="form-group">
        <label for="Stock">Stoc</label>
        <input type="number" class="form-control" asp-for="Stock" required />
    </div>

    <div class="form-group">
        <label for="ShortDescription">Descriere</label>
        <textarea class="form-control" asp-for="ShortDescription"></textarea>
    </div>

    <div class="form-group">
        <label for="ImageUrl">URL Imagine</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fas fa-save"></i> Salvează modificările
    </button>

    <a href="/Seller" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Înapoi
    </a>
</form>
